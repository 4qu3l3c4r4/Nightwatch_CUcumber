{
  "name": "nightwatch-cucumber",
  "version": "2.1.1",
  "description": "Nightwatch.js plugin for Cucumber.js",
  "main": "lib/index.js",
  "author": "Igor Muchychka <mucsi_96@yahoo.com>",
  "license": "MIT",
  "dependencies": {
    "co": "^4.6.0",
    "glob": "^7.0.0",
    "mkdirp": "^0.5.1",
    "object-assign": "^4.0.1",
    "resolve": "^1.1.7",
    "semver": "^5.1.0",
    "syntax-error": "^1.1.4",
    "tmp": "^0.0.28"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "node_modules/.bin/standard",
    "nightwatch-simple-test": "cd test/nightwatch-simple-test && ../node_modules/.bin/nightwatch && cd ../..",
    "nightwatch-multi-test": "cd test/nightwatch-multi-test && ../node_modules/.bin/nightwatch && cd ../..",
    "nightwatch-reporter-test": "cd test/nightwatch-reporter-test && ../node_modules/.bin/nightwatch && cd ../..",
    "nightwatch-hook-test": "cd test/nightwatch-hook-test && ../node_modules/.bin/nightwatch && cd ../..",
    "nightwatch-background-test": "cd test/nightwatch-background-test && ../node_modules/.bin/nightwatch && cd ../..",
    "nightwatch-outlines-test": "cd test/nightwatch-outlines-test && ../node_modules/.bin/nightwatch && cd ../..",
    "nightwatch-tag-test": "cd test/nightwatch-tag-test && ../node_modules/.bin/nightwatch --tag search && cd ../..",
    "nightwatch-group-test": "cd test/nightwatch-group-test && ../node_modules/.bin/nightwatch --group group && cd ../..",
    "nightwatch-custom-folder-test": "cd test/nightwatch-custom-folder-test && ../node_modules/.bin/nightwatch --group group && cd ../..",
    "nightwatch-page-object-test": "cd test/nightwatch-page-object-test && ../node_modules/.bin/nightwatch && cd ../..",
    "nightwatch-paralell-test": "cd test/nightwatch-paralell-test && ../node_modules/.bin/nightwatch && cd ../..",
    "cucumber-simple-test": "cd test/cucumber-simple-test && ../node_modules/.bin/cucumberjs && cd ../..",
    "cucumber-multi-test": "cd test/cucumber-multi-test && ../node_modules/.bin/cucumberjs && cd ../..",
    "test": "npm run lint && npm run nightwatch-simple-test && npm run nightwatch-reporter-test && npm run nightwatch-multi-test && npm run nightwatch-hook-test && npm run nightwatch-background-test && npm run nightwatch-tag-test && npm run nightwatch-group-test && npm run nightwatch-custom-folder-test && npm run nightwatch-page-object-test && npm run nightwatch-outlines-test && npm run nightwatch-paralell-test && npm run cucumber-simple-test && npm run cucumber-multi-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mucsi96/nightwatch-cucumber.git"
  },
  "keywords": [
    "nightwatch",
    "cucumber",
    "gherkin",
    "bdd",
    "selenium",
    "browser",
    "automation",
    "testing",
    "test"
  ],
  "bugs": {
    "url": "https://github.com/mucsi96/nightwatch-cucumber/issues"
  },
  "homepage": "https://github.com/mucsi96/nightwatch-cucumber#readme",
  "files": [
    "lib"
  ],
  "devDependencies": {
    "pre-commit": "^1.1.2",
    "standard": "^6.0.8"
  },
  "pre-commit": [
    "lint"
  ]
}
