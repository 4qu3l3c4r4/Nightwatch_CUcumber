{
  "name": "nightwatch-cucumber-test",
  "private": true,
  "scripts": {
    "install": "rm -rf node_modules/nightwatch-cucumber && ln -s ../.. node_modules/nightwatch-cucumber",
    "test": "npm run simple-test && npm run tag-test && npm run group-test && npm run cc-test",
    "simple-test": "node_modules/.bin/nightwatch",
    "tag-test": "node_modules/.bin/nightwatch --tag yahoo",
    "group-test": "node_modules/.bin/nightwatch --group group",
    "cc-test": "node_modules/.bin/cucumberjs features/google.feature"
  },
  "devDependencies": {
    "chromedriver": "^2.20.0",
    "cucumber": "^0.9.2",
    "nightwatch": "^0.8.6",
    "phantomjs": "^1.9.19",
    "selenium-server": "^2.48.2"
  }
}
